<!DOCTYPE html>
<html>
<head>
  <title>Camel Case Converter</title>
</head>
<body>
  <h2>Camel Case Converter</h2>
  <input type="text" id="inputStr" placeholder="Enter a string"><br>
  <button onclick="convertToCamel()">Convert</button>
  <div id="result" style="margin-top:10px; font-weight:bold;"></div>

  <script>
    function convertToCamel() {
      const str = document.getElementById("inputStr").value;
      if (!str) return document.getElementById("result").innerText = "Enter a string!";
      const words = str.split(" ");
      const firstWord = words[0].toLowerCase();
      const camelWords = words.slice(1).map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase());
      const camelCaseStr = [firstWord, ...camelWords].join("");
      document.getElementById("result").innerText = camelCaseStr;
    }
  </script>
</body>
</html>
